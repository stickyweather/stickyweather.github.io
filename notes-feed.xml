---
layout: null
permalink: /notes/feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>Notes from Sticky Weather</title>
    <link>{{ site.url }}</link>
    <description>Short notes and social posts</description>

    {% for note in site.notes limit:20 %}
    <item>
      <title>{{ note.content | strip_html }}</title>
      <link>{{ site.url }}{{ note.url }}</link>
      <guid>{{ site.url }}{{ note.url }}</guid>
      <pubDate>{{ note.date | date_to_rfc822 }}</pubDate>
      <description><![CDATA[
        {{ note.content | strip_html }}
      ]]></description>
      {%- if note.mf-photo -%}
        {%- for mf-photo in note.mf-photo -%}
          <media:content
            url="{{ mf-photo }}"
            isDefault="true"
            expression="full"
          />
        {%- endfor -%}
      {%- endif -%}
    </item>
    {% endfor %}
  </channel>
</rss>
